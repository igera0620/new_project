<nav class="bg-gray-800">
  <div class="mx-auto max-w-7xl px-2 sm:px-4 lg:px-8">
    <div class="relative flex h-16 items-center justify-between">
      <!-- Homeボタン -->
      <div class="lg:flex lg:items-center">
        <%= link_to root_path, class: 'text-white flex items-center space-x-2 px-3 py-2 rounded-md text-sm font-medium hover:bg-gray-700 hover:text-white' do %>
          <!-- HeroiconsのHomeアイコン -->
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7m-9 9V9m4 4v6m5-7h-3a2 2 0 00-2 2v5m0-5a2 2 0 00-2-2H7m10 0v6m5-7h-3m0 0l2-2m0 0l-7-7m-7 7l7-7" />
          </svg>
          <span>Home</span>
        <% end %>
      </div>
      
      <div class="flex items-center ml-auto space-x-4">
        <% if logged_in? && current_user %>
          <div class="relative flex-shrink-0">
            <button type="button" class="relative flex rounded-full bg-gray-800 text-sm text-white focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-gray-800" id="user-menu-button" aria-expanded="false" aria-haspopup="true">
              <span class="sr-only">Open user menu</span>
              <% if current_user.avatar.attached? %>
                <% image_url = rails_blob_url(current_user.avatar, disposition: "attachment") %>
                <%= image_tag image_url, class: 'h-8 w-8 rounded-full', alt: 'User avatar' %>
              <% else %>
                <%= image_tag 'default_avatar.png', class: 'h-10 w-10 rounded-full', alt: 'Default avatar' %>
              <% end %>
            </button>
          </div>
          <!-- プロフィールメニュー -->
          <div id="profileMenu" class="no-fade hidden absolute right-0 z-50 w-48 origin-top-right rounded-md bg-white py-1 shadow-lg ring-1 ring-black ring-opacity-5 focus:outline-none" style="top: 50px;" role="menu" aria-orientation="vertical" aria-labelledby="user-menu-button">
            <%= link_to 'プロフィール', user_path(current_user), class: 'block px-4 py-2 text-sm text-gray-700', role: 'menuitem', id: 'user-menu-item-0' %>
            <%= link_to '設定', edit_user_path(current_user), class: 'block px-4 py-2 text-sm text-gray-700', role: 'menuitem', id: 'user-menu-item-1' %>
            <%= link_to 'サインアウト', logout_path, method: :delete, class: 'block px-4 py-2 text-sm text-gray-700', role: 'menuitem', id: 'user-menu-item-2' %>
          </div>
        <% else %>
          <%= link_to 'ログイン', login_path, class: 'ml-4 rounded-md bg-gray-700 px-3 py-2 text-sm font-medium text-white hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-gray-800' %>
        <% end %>
      </div>
    </div>
  </div>
</nav>

<div class="lg:hidden" id="mobile-menu">
  <div class="border-t border-gray-700 pb-3 pt-4">
  </div>
</div>
