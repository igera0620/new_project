<nav class="bg-gray-800">
  <div class="mx-auto max-w-7xl px-2 sm:px-4 lg:px-8">
    <div class="relative flex h-16 items-center justify-between">
      <!-- Homeボタン -->
      <div class="lg:flex lg:items-center">
        <%= link_to root_path, class: 'text-white flex items-center space-x-2 px-3 py-2 rounded-md text-sm font-medium hover:bg-gray-700 hover:text-white' do %>
          <!-- HeroiconsのHomeアイコン -->
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7m-9 9V9m4 4v6m5-7h-3a2 2 0 00-2 2v5m0-5a2 2 0 00-2-2H7m10 0v6m5-7h-3m0 0l2-2m0 0l-7-7m-7 7l7-7" />
          </svg>
          <span>Home</span>
        <% end %>
      </div>
      <!-- プロフィールアイコンを右側に配置 -->
      <div class="flex items-center ml-auto">
        <% if logged_in? && current_user %>
          <div class="relative flex-shrink-0">
            <div>
              <button type="button" class="relative flex rounded-full bg-gray-800 text-sm text-white focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-gray-800" id="user-menu-button" aria-expanded="false" aria-haspopup="true">
                <span class="absolute -inset-1.5"></span>
                <span class="sr-only">Open user menu</span>
                <% if current_user.avatar.attached? %>
                  <%= image_tag current_user.avatar.variant(resize_to_fill: [32, 32]), class: 'h-8 w-8 rounded-full', alt: 'User avatar' %>
                <% else %>
                  <%= image_tag 'default_avatar.png', class: 'h-10 w-10 rounded-full', alt: 'Default avatar' %>
                <% end %>
              </button>
            </div>
            <div id="profileMenu" class="hidden absolute right-0 z-10 mt-2 w-48 origin-top-right rounded-md bg-white py-1 shadow-lg ring-1 ring-black ring-opacity-5 focus:outline-none" role="menu" aria-orientation="vertical" aria-labelledby="user-menu-button">
              <%= link_to 'プロフィール', user_path(current_user), class: 'block px-4 py-2 text-sm text-gray-700', role: 'menuitem', id: 'user-menu-item-0' %>
              <%= link_to '設定', edit_user_path(current_user), class: 'block px-4 py-2 text-sm text-gray-700', role: 'menuitem', id: 'user-menu-item-1' %>
              <%= link_to 'サインアウト', logout_path, method: :delete, class: 'block px-4 py-2 text-sm text-gray-700', role: 'menuitem', id: 'user-menu-item-2' %>
            </div>
          </div>
        <% else %>
          <%= link_to 'ログイン', login_path, class: 'ml-4 rounded-md bg-gray-700 px-3 py-2 text-sm font-medium text-white hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-gray-800' %>
        <% end %>
      </div>
    </div>
  </div>
  
  <!-- モバイルメニュー -->
  <div class="lg:hidden" id="mobile-menu">
    <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3">
      <!-- Homeボタン (モバイルメニュー用) -->
      <%= link_to root_path, class: 'text-white flex items-center space-x-2 px-3 py-2 rounded-md text-sm font-medium hover:bg-gray-700 hover:text-white' do %>
        <!-- HeroiconsのHomeアイコン -->
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7m-9 9V9m4 4v6m5-7h-3a2 2 0 00-2 2v5m0-5a2 2 0 00-2-2H7m10 0v6m5-7h-3m0 0l2-2m0 0l-7-7m-7 7l7-7" />
        </svg>
        <span>Home</span>
      <% end %>
    </div>
    
    <div class="border-t border-gray-700 pb-3 pt-4">
      <div class="flex items-center px-5">
        <div class="flex-shrink-0">
          <% if current_user&.avatar&.attached? %>
            <%= image_tag current_user.avatar.variant(resize_to_fill: [40, 40]), class: 'h-10 w-10 rounded-full', alt: 'User avatar' %>
          <% else %>
            <%= image_tag 'default_avatar.png', class: 'h-10 w-10 rounded-full', alt: 'Default avatar' %>
          <% end %>
        </div>
        <% if current_user %>
        <div class="ml-3">
          <div class="text-base font-medium text-white"><%= current_user.name %></div>
          <div class="text-sm font-medium text-gray-400"><%= current_user.email %></div>
        </div>
        <% end %>
        <button type="button" class="relative ml-auto flex-shrink-0 rounded-full bg-gray-800 p-1 text-gray-400 hover:text-white focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-gray-800">
          <span class="absolute -inset-1.5"></span>
          <span class="sr-only">View notifications</span>
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" d="M14.857 17.082a23.848 23.848 0 005.454-1.31A8.967 8.967 0 0118 9.75v-.7V9A6 6 0 006 9v.75a8.967 8.967 0 01-2.312 6.022c1.733.64 3.56 1.085 5.455 1.31m5.714 0a24.255 24.255 0 01-5.714 0m5.714 0a3 3 0 11-5.714 0" />
          </svg>
        </button>
      </div>
      <div class="mt-3 space-y-1 px-2">
        <% if logged_in? && current_user %>
          <%= link_to 'プロフィール', user_path(current_user), class: 'block rounded-md px-3 py-2 text-base font-medium text-gray-400 hover:bg-gray-700 hover:text-white' %>
          <%= link_to '設定', edit_user_path(current_user), class: 'block rounded-md px-3 py-2 text-base font-medium text-gray-400 hover:bg-gray-700 hover:text-white' %>
          <%= link_to 'サインアウト', logout_path, method: :delete, class: 'block rounded-md px-3 py-2 text-base font-medium text-gray-400 hover:bg-gray-700 hover:text-white' %>
        <% else %>
          <%= link_to 'ログイン', login_path, class: 'block rounded-md bg-gray-700 px-3 py-2 text-base font-medium text-white hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-gray-800' %>
        <% end %>
      </div>
    </div>
  </div>
</nav>
