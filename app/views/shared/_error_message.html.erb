<% if object.errors.any? %>
  <div class="bg-red-500 text-white p-4 rounded-md">
    <p class="font-bold"><%= pluralize(object.errors.count, "エラー") %> が発生しました:</p>
    <ul class="mt-2">
      <% object.errors.full_messages.each do |message| %>
        <li>• <%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
